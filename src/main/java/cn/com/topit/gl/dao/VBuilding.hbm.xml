<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
"http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
	<class name="cn.com.topit.gl.dao.VBuilding" table="v_building" dynamic-insert="true" dynamic-update="true">
		<id name="id" type="java.lang.Long">
			<column name="id" />
			<generator class="identity" />
		</id>
		<property name="cityName" type="java.lang.String">
			<column name="city_name" length="50" not-null="true"/>
		</property>
		<property name="areaName" type="java.lang.String">
			<column name="area_name" length="50" not-null="true"/>
		</property>
		<property name="name" type="java.lang.String">
			<column name="name" length="200" not-null="true"/>
		</property>
		<property name="areaId" type="java.lang.Long">
			<column name="area_id" length="8"/>
		</property>
		<property name="circleId" type="java.lang.Long">
			<column name="circle_id" length="500"/>
		</property>
		<property name="circleName" type="java.lang.String">
		    <column name="circle_name" length="500"/>
		</property>
		<property name="intro" type="java.lang.String">
			<column name="intro" length="2000"/>
		</property>
		<property name="traffic" type="java.lang.String">
			<column name="traffic" length="2000"/>
		</property>
		<property name="pic" type="java.lang.String">
			<column name="pic" length="200"/>
		</property>
		<property name="cityId" type="java.lang.Long">
			<column name="city_id" length="8" not-null="true"/>
		</property>
	</class>
</hibernate-mapping>
