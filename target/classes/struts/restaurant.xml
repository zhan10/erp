<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE struts PUBLIC "-//Apache Software Foundation//DTD Struts Configuration 2.1//EN" "http://struts.apache.org/dtds/struts-2.1.dtd">

<struts>
  <package name="cn.com.topit.gl.restaurant" namespace="/restaurant" extends="cn.com.topit.gl">
    <action name="recipeType" class="recipeTypeAction">
      <result type="json" name="managerExt"> 
        <param name="root">records</param>  
        <param name="noCache">true</param> 
      </result>
    </action>
    <action name="recipe" class="recipeAction">
      <result type="json" name="managerExt"> 
        <param name="root">records</param>  
        <param name="noCache">true</param> 
      </result>
    </action>
    <action name="vRecipe" class="vRecipeAction">
      <result type="json" name="managerExt"> 
        <param name="root">records</param>  
        <param name="noCache">true</param> 
      </result>
    </action>
    <action name="orders" class="ordersAction">
      <result type="json" name="managerExt"> 
        <param name="root">records</param>  
        <param name="noCache">true</param> 
      </result>
    </action>
    <action name="vOrders" class="vOrdersAction">
      <result type="json" name="managerExt"> 
        <param name="root">records</param>  
        <param name="noCache">true</param> 
      </result>
    </action>
    <action name="ordersList" class="ordersListAction">
      <result type="json" name="managerExt"> 
        <param name="root">records</param>  
        <param name="noCache">true</param> 
      </result>
    </action>
  </package>
</struts>
