<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
"http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
	<class name="cn.com.topit.gl.dao.UserRole" table="user_role" dynamic-insert="true" dynamic-update="true">
		<id name="id" type="java.lang.Long">
			<column name="id" />
			<generator class="identity" />
		</id>
		<property name="userId" type="java.lang.Long">
			<column name="user_id" length="8" not-null="true"/>
		</property>
		<property name="roleId" type="java.lang.Long">
			<column name="role_id" length="8" not-null="true"/>
		</property>
	</class>
</hibernate-mapping>
