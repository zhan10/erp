<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
"http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
	<class name="cn.com.topit.gl.dao.Warehouse" table="warehouse" dynamic-insert="true" dynamic-update="true">
		<id name="id" type="java.lang.Long">
			<column name="id" />
			<generator class="identity" />
		</id>
		<property name="serialNumber" type="java.lang.String">
			<column name="serial_number" length="50" not-null="true"/>
		</property>
		<property name="type" type="java.lang.Integer">
			<column name="type" length="4" not-null="true"/>
		</property>
		<property name="name" type="java.lang.String">
			<column name="name" length="50" not-null="true"/>
		</property>
		<property name="remarks" type="java.lang.String">
			<column name="remarks" length="2000"/>
		</property>
	</class>
</hibernate-mapping>
