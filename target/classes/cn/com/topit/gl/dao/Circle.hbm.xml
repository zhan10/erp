<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
"http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
	<class name="cn.com.topit.gl.dao.Circle" table="circle" dynamic-insert="true" dynamic-update="true">
		<id name="id" type="java.lang.Long">
			<column name="id" />
			<generator class="identity" />
		</id>
		<property name="name" type="java.lang.String">
			<column name="name" length="200" not-null="true"/>
		</property>
		<property name="intro" type="java.lang.String">
			<column name="intro" length="2000"/>
		</property>
		<property name="pic" type="java.lang.String">
			<column name="pic" length="200"/>
		</property>
		<property name="cityId" type="java.lang.Long">
			<column name="city_id" length="8" not-null="true"/>
		</property>
	</class>
</hibernate-mapping>
